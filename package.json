{
  "name": "repotime",
	"displayName": "RepoTime",
	"description": " Visual Studio Code plugin for automatic time tracking and metrics generated from your coding activity.",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "repotime.helloWorld",
				"title": "Hello World"
			}
		],
		"configuration":{
			"type": "object",
			"title": "RepoTime configuration",
			"properties": {
				"repotime.showStatus": {
					"type": "boolean",
					"default": true,
					"description": "Display coding status on the left status bar"
				},
				"repotime.userid": {
					"type": "string",
					"default": "1",
					"description": "Your user ID from the website"
				},
				"repotime.minTime": {
					"type": "number",
					"default": 1,
					"description": "Minimum recording time"
				},
				"repotime.maxTime": {
					"type": "number",
					"default": 10,
					"description": "Maximum upload interval"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.67.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2",
		"@vscode/test-electron": "^2.1.3",
		"axios": "^0.26.0"
	}
}
